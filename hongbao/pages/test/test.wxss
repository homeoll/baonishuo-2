  position: relative;
}
.send image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  left:0;
  right:0;
  top:50rpx;
  margin:auto;
  border:1rpx solid #959595;
}
.send .zi{
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  text-align: center;
   position: absolute;
   top:200rpx;

}
.send span{
  margin-right: 10rpx;
}
.shuju{
