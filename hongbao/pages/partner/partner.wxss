page{
  background: #F2F2F2;
  box-sizing: border-box;
  padding: 20rpx 40rpx 30rpx;
  position: relative;
}
.title{
  width: 100%;
  height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  line-height:100rpx;
  color: #6C6C6C;
}
.content{
  width: 100%;
  height: auto;
  font-size: 34rpx;
  color:#939393;
  text-align:justify;
}
.foot{
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  margin-top: 100rpx;
}
.foot image{
  width: 44rpx;
  height:44rpx;
  vertical-align: text-bottom;
  margin-right: 10rpx;
}
.foot span{
  font-size: 32rpx;
}
.jubao{
  width:100%;
  height: auto;

  margin-top: 70rpx;
  margin-bottom: 10rpx;
  text-align: center;
}
.jubao span{
  font-size:24rpx;
  display:inline-block;
  margin-right: 10rpx;
  line-height: 30rpx;
}
/*弹框*/
.pop-up{
  width: 90%;
  height:800rpx;
  position: absolute;
  top:10%;
  background:rgba(0,0,0,0.7);
  box-sizing: border-box;
  padding:0 50rpx;
  border-radius: 10rpx;
}
.close{
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  background: #D95940; 
  color:#fff;
  position: absolute;
  right:-10rpx;
  top:-10rpx;
  margin:auto;
  text-align: center;
  line-height: 60rpx;
  border:4rpx solid #D95940;
}
.pop-up-input{
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  border:2rpx solid #D95940;
  color:#fff;
  box-sizing: border-box;
  padding: 0 20rpx;
  text-align: center;
  border-radius: 8rpx;
  margin-top:200rpx;
}
.pop-up-button{
  width: 100%;
  height:80rpx;
  background: #D95940;
  margin-top:80rpx;
  color:#fff;
  line-height: 80rpx;
  font-size: 30rpx;
}