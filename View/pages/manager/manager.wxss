@import "/wxParse/wxParse.wxss";
page{
  background: #F2F2F2;
  box-sizing: border-box;
  padding: 20rpx 40rpx 30rpx;
}
.title{
  width: 100%;
  height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  line-height:100rpx;
  color: #6C6C6C;
}
.content{
  width: 100%;
  height: auto;
  font-size: 34rpx;
  color:#939393;
  text-align:justify;
}
.foot{
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  margin-top: 5rpx;
}
.foot image{
  width: 44rpx;
  height:44rpx;
  vertical-align: text-bottom;
  margin-right: 10rpx;
}
.foot span{
  font-size: 32rpx;
}
.jubao{
  width:100%;
  height: auto;

  margin-top: 70rpx;
  margin-bottom: 10rpx;
  text-align: center;
}
.jubao span{
  font-size:24rpx;
  display:inline-block;
  margin-right: 10rpx;
  line-height: 30rpx;
}
.money{
  width: 100%;
  height: auto;
}
.money-item{
  height: 120rpx;
  background: #fff;
  margin-top:20rpx;
  box-sizing: border-box;
  padding:20rpx;
  line-height: 100rpx;
  font-size: 30rpx;
}
 .money-item-num{
  float:right;
  width: 20%;
  line-height: 70rpx;
  font-size:30rpx;
  text-align: right;
} 
/* .money-item-state{
  float:left;
  height: 100%;
} */
.money-item-state-image{
  width:11%;
  height:70rpx;
  display: inline-block;
  margin-right: 14rpx;
  float:left;
}
.money-item-state-image image{
  width: 100%;
  height: 100%;
}
.money-left-title{
  width: 60%;
  height: auto;
  box-sizing: border-box;
  display: inline-block;
 
  float:left;
}
.money-left-title-top{
  width: auto;
   /* height: 30rpx;  */
   line-height:40rpx; 
   font-size: 30rpx;
}
.money-left-title-bottom{
  width: auto;
  line-height:40rpx; 
  font-size: 25rpx;
  color:#b0b0b0;
}
.search{
  width: 100%;
  height: 70rpx;
  text-align: center;
  color:#525252;
  font-size: 32rpx;
}
.search image{
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
}
.search .search-zi{
  margin-top:80rpx;
}
.search-item{
  margin-top:70rpx;
  font-size:25rpx;
}
.search-zi image{
  vertical-align: middle;
  margin-right: 14rpx;
}
.search .shu{
 color:#D3D3D3;
 margin-left: 20rpx;
 margin-right: 20rpx;
}

.search-time{
  display: inline-block;
  position: relative;
  top:12rpx;
}
picker{
    display: inline-block;
}
.search-time image{
  vertical-align:baseline;
}
.color-red{
  color:red;
}
.color-opacity{
  opacity: 0.5
}

.send{
  width: 100%;
  height: 500rpx;
  /* background: #F5F6F5; */
  position: relative;
}
.send image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  left:0;
  right:0;
  top:50rpx;
  margin:auto;
  border:1rpx solid #959595;
}
.send .zi{
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  text-align: center;
   position: absolute;
   top:200rpx;

}
.send span{
  margin-right: 10rpx;
}
.shuju{
  width: 100%;
  height: 130rpx;
  position: absolute;
  left:0;
  right:0;
  top:300rpx;
  margin:auto;
  padding:0 100rpx;
  box-sizing: border-box;
}
.shuju .item{
  width: 100%;
  height: 100%;
  float:left;
  text-align: center;
}
.shang{
  font-size: 30rpx;
  color:#959595;
}
.xia{
  font-size: 50rpx;
  font-weight: bold;
}